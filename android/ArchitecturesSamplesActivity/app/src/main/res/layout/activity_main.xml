<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnMVC"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Model View Controller example"
         />

    <Button
        android:id="@+id/btnMVP"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Model View Presenter example"
        android:layout_below="@+id/btnMVC"
        />

    <Button
        android:id="@+id/btnMVVM"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Model View View-Model example"
        android:layout_below="@+id/btnMVP"
        />



</RelativeLayout>